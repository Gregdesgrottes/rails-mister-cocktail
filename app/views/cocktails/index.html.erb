<h1>Index cocktail</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
</thead>

<tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <%= link_to new_cocktail_path, {class: "btn btn-primary"} do  %>
  <% 'New cocktail' %>
  <% end %>

